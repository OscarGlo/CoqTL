{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "./compile.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.sh",
            "problemMatcher": []
        },
        {
            "label": "ecore2v on current file",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "./build/libs/fr.inria.atlanmod.coqtl.generators-all.jar",
                "fr.inria.atlanmod.coqtl.ecore.core.EcoreGeneratorDriver",
                "${relativeFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "xmi2v on current file",
            "type": "shell",
            "command": "java",
            "args": [
                "-jar",
                "./build/libs/fr.inria.atlanmod.coqtl.generators-all.jar",
                "${relativeFile}",
                "${input:metamodelPath}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
        "type": "promptString",
        "id": "metamodelPath",
        "description": "Path of the metamodel ecore file"
        }
    ]
}
